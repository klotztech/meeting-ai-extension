{
	"manifest_version": 3,
	"name": "Tab Audio Recorder",
	"version": "1.0.0",
	"description": "Record tab audio with microphone for calls and meetings",
	"permissions": ["tabCapture", "offscreen", "storage"],
	"action": {
		"default_popup": "popup.html"
	},
	"background": {
		"service_worker": "background.js"
	},
	"icons": {
		"16": "icons/icon16.png",
		"48": "icons/icon48.png",
		"128": "icons/icon128.png"
	}
}
